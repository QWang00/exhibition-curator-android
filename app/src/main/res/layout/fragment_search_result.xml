<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:padding="16dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pagination_controls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Existing header and content -->
            <include layout="@layout/header_layout"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/artwork_results_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artwork search: XXXX \nresults"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/text_light_gray"
                android:gravity="start"
                android:layout_marginBottom="8dp"/>

            <!-- New Search Link with proper underline -->
            <TextView
                android:id="@+id/new_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/artworks_new_search_button"
                android:textSize="26sp"
                android:textColor="@color/accent_cyan"
                android:paddingBottom="4dp"
                android:background="@drawable/underline"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/artwork_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>

    <!-- Pagination Controls - Fixed positioning -->
    <LinearLayout
        android:id="@+id/pagination_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Previous Button -->
        <LinearLayout
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/prev_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
                app:tint="@color/text_white"/>

            <TextView
                android:id="@+id/prev_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Next Button -->
        <LinearLayout
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:layout_marginEnd="4dp"/>

            <ImageView
                android:id="@+id/next_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>